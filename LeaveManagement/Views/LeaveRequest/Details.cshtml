@model LeaveManagement.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Details";
}

<h1>Review @Model.RequestingEmployee.Firstname 's leave request</h1>
<h4>@Html.DisplayFor(model => model.DateRequested)</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingEmployee)
        </dt>
        <dd class="col-sm-10">
            @Model.RequestingEmployee.Firstname
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
        
    </dl>
</div>
<div>
    @if (Model.Approved == null)
    {
        <a href="#">
            class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@Model.Id">
            <i class="fade fa-check"></i>Approve
        </a>
        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id">
            <i class="fade fa-remove"></i>Reject
            </
        </a>a >
   }
    <a class="btn btn-outline-secondary" asp-action="Index">
        <i class="fade fa-arrow-left"></i>Back to List
    </a>
</div>
